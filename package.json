{
  "name": "image-alt-generator",
  "private": true,
  "version": "0.0.0",
  "description": "Gerador inteligente de alt text e descrições para imagens usando AI da Azion",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @image-alt-generator/web dev",
    "build": "pnpm --filter @image-alt-generator/web build",
    "build:dev": "pnpm --filter @image-alt-generator/web build:dev",
    "lint": "pnpm --recursive lint",
    "preview": "pnpm --filter @image-alt-generator/web preview",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "typescript": "^5.8.3"
  }
}
